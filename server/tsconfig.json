{
    "compilerOptions": {
        "lib": ["es6"],
        "types": ["node"],
        "target": "es6",
        "outDir": "./build",
        "experimentalDecorators": true,
        "emitDecoratorMetadata":true,
        "pretty": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
